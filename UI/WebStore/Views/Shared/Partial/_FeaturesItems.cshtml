@model IEnumerable<WebStore.Domain.ViewModels.ProductViewModel>

<div class="features_items">
    <!--features_items-->
    <h2 class="title text-center">Товары из каталога</h2>
    @if (Model is null || !Model.Any())
    {
        <p>В выдаче товары отсутствуют</p>
    }
    else
    {
        foreach (var product in Model)
        {
            <div class="col-sm-4">
                <div class="product-image-wrapper">
                    <div class="single-products">
                        <div class="productinfo text-center">
                            <img src="~/images/shop/@product.ImageUrl" alt="@product.Name" />
                            <h2>@product.Price.ToString("C")</h2>
                            <p>
                                <a asp-controller="Catalog" asp-action="Details" asp-route-id="@product.Id"
                                   asp-route-SectionId="@Context.Request.Query["SectionId"]"
                                   asp-route-BrandId="@Context.Request.Query["BrandId"]">
                                    @product.Name
                                </a>
                            </p>
                            <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-default add-to-cart">
                                <i class="fa fa-shopping-cart"></i>Добавить в корзину
                            </a>
                        </div>
                        <div class="product-overlay">
                            <div class="overlay-content">
                                <h2>@product.Price.ToString("C")</h2>
                                <p>
                                    <a asp-controller="Catalog" asp-action="Details" asp-route-id="@product.Id"
                                       asp-route-SectionId="@Context.Request.Query["SectionId"]"
                                       asp-route-BrandId="@Context.Request.Query["BrandId"]">
                                        @product.Name
                                    </a>
                                </p>
                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-default add-to-cart">
                                    <i class="fa fa-shopping-cart"></i>Добавить в корзину
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="choose">
                        <ul class="nav nav-pills nav-justified">
                            <li><a href="#"><i class="fa fa-plus-square"></i>Добавить в список желаний</a></li>
                            <li><a href="#"><i class="fa fa-plus-square"></i>Добавить к сравнению</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    }

</div><!--features_items-->